<?xml version="1.0" encoding="utf-8"?>

<!--用于情侣模块-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <TextView
        android:id="@+id/id_myll_titletext"
        android:layout_width="match_parent"

        android:layout_height="82dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/qinglv_title_bg"
        android:gravity="center"
        android:text="情侣头像"
        android:textColor="#111"
        android:textSize="18dp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qinglv_img_bg">

        <ImageView
            android:id="@+id/id_myll_img1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:background="@color/imageDefaultBackgroundColor"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/id_myll_img2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@color/imageDefaultBackgroundColor"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qinglv_img_bg">

        <ImageView
            android:id="@+id/id_myll_img3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:background="@color/imageDefaultBackgroundColor"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/id_myll_img4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@color/imageDefaultBackgroundColor"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qinglv_img_bg">

        <ImageView
            android:id="@+id/id_myll_img5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:background="@color/imageDefaultBackgroundColor"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/id_myll_img6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@color/imageDefaultBackgroundColor"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <Button
        android:id="@+id/id_myll_btn"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@null"
        android:gravity="center"
        android:text="更多情侣头像"
        android:textColor="#555"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd" />
</LinearLayout>